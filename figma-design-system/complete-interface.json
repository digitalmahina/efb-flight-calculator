{
  "interface": {
    "name": "EFB Flight Calculator - Complete Interface",
    "version": "2.0",
    "description": "Complete interface structure for EFB Flight Calculator with all components and screens",
    
    "components": {
      "header": {
        "name": "Header",
        "type": "component",
        "description": "Main header with logo, title and navigation",
        "properties": {
          "width": "100%",
          "height": "80px",
          "background": "semantic.color.background.primary",
          "border": "semantic.border.primary",
          "padding": "semantic.spacing.md"
        },
        "elements": [
          {
            "type": "text",
            "content": "EFB",
            "font": "semantic.typography.heading.large",
            "color": "semantic.color.text.primary",
            "position": { "x": 24, "y": 20 }
          },
          {
            "type": "text", 
            "content": "Flight Calculator v2.0",
            "font": "semantic.typography.body.medium",
            "color": "semantic.color.text.secondary",
            "position": { "x": 80, "y": 25 }
          },
          {
            "type": "button",
            "content": "Settings",
            "style": "secondary",
            "position": { "x": "right-120", "y": 20 }
          }
        ]
      },
      
      "flightDataPanel": {
        "name": "Flight Data Panel",
        "type": "component",
        "description": "Panel for flight data input and display",
        "properties": {
          "width": "400px",
          "height": "600px",
          "background": "semantic.color.background.secondary",
          "border": "semantic.border.primary",
          "borderRadius": "semantic.borderRadius.lg",
          "padding": "semantic.spacing.lg"
        },
        "elements": [
          {
            "type": "text",
            "content": "Flight Data",
            "font": "semantic.typography.heading.medium",
            "color": "semantic.color.text.primary",
            "position": { "x": 0, "y": 0 }
          },
          {
            "type": "input",
            "label": "Departure Airport",
            "placeholder": "Enter ICAO code",
            "position": { "x": 0, "y": 60 }
          },
          {
            "type": "input",
            "label": "Arrival Airport", 
            "placeholder": "Enter ICAO code",
            "position": { "x": 0, "y": 120 }
          },
          {
            "type": "input",
            "label": "Aircraft Type",
            "placeholder": "e.g. Cessna 172",
            "position": { "x": 0, "y": 180 }
          },
          {
            "type": "input",
            "label": "Fuel Capacity (L)",
            "placeholder": "Enter capacity",
            "position": { "x": 0, "y": 240 }
          },
          {
            "type": "button",
            "content": "Calculate Flight",
            "style": "primary",
            "position": { "x": 0, "y": 320 }
          },
          {
            "type": "dataCard",
            "title": "Distance",
            "value": "0 nm",
            "position": { "x": 0, "y": 400 }
          },
          {
            "type": "dataCard", 
            "title": "Flight Time",
            "value": "0:00",
            "position": { "x": 200, "y": 400 }
          },
          {
            "type": "dataCard",
            "title": "Fuel Required",
            "value": "0 L",
            "position": { "x": 0, "y": 480 }
          }
        ]
      },
      
      "mapPanel": {
        "name": "Map Panel",
        "type": "component", 
        "description": "Interactive map panel for route visualization",
        "properties": {
          "width": "600px",
          "height": "400px",
          "background": "semantic.color.background.tertiary",
          "border": "semantic.border.primary",
          "borderRadius": "semantic.borderRadius.lg"
        },
        "elements": [
          {
            "type": "text",
            "content": "Route Map",
            "font": "semantic.typography.heading.medium",
            "color": "semantic.color.text.primary",
            "position": { "x": 20, "y": 20 }
          },
          {
            "type": "mapArea",
            "description": "Interactive map area",
            "position": { "x": 20, "y": 60 },
            "size": { "width": 560, "height": 300 }
          },
          {
            "type": "mapControls",
            "position": { "x": "right-80", "y": 20 },
            "controls": ["zoom-in", "zoom-out", "center", "layers"]
          }
        ]
      },
      
      "routePanel": {
        "name": "Route Panel",
        "type": "component",
        "description": "Detailed route information panel",
        "properties": {
          "width": "400px", 
          "height": "400px",
          "background": "semantic.color.background.secondary",
          "border": "semantic.border.primary",
          "borderRadius": "semantic.borderRadius.lg",
          "padding": "semantic.spacing.lg"
        },
        "elements": [
          {
            "type": "text",
            "content": "Route Details",
            "font": "semantic.typography.heading.medium",
            "color": "semantic.color.text.primary",
            "position": { "x": 0, "y": 0 }
          },
          {
            "type": "routeList",
            "position": { "x": 0, "y": 50 },
            "items": [
              {
                "waypoint": "EDDF",
                "name": "Frankfurt Airport",
                "distance": "0 nm",
                "bearing": "000째"
              },
              {
                "waypoint": "EDDM", 
                "name": "Munich Airport",
                "distance": "185 nm",
                "bearing": "135째"
              }
            ]
          }
        ]
      },
      
      "weatherPanel": {
        "name": "Weather Panel",
        "type": "component",
        "description": "Weather information and forecasts",
        "properties": {
          "width": "400px",
          "height": "300px", 
          "background": "semantic.color.background.secondary",
          "border": "semantic.border.primary",
          "borderRadius": "semantic.borderRadius.lg",
          "padding": "semantic.spacing.lg"
        },
        "elements": [
          {
            "type": "text",
            "content": "Weather",
            "font": "semantic.typography.heading.medium",
            "color": "semantic.color.text.primary",
            "position": { "x": 0, "y": 0 }
          },
          {
            "type": "weatherCard",
            "title": "Current Conditions",
            "position": { "x": 0, "y": 50 },
            "data": {
              "temperature": "15째C",
              "wind": "12 kt @ 270째",
              "visibility": "10+ SM",
              "ceiling": "3000 ft"
            }
          },
          {
            "type": "weatherCard",
            "title": "Route Forecast", 
            "position": { "x": 0, "y": 150 },
            "data": {
              "conditions": "VFR",
              "turbulence": "Light",
              "icing": "None",
              "winds": "Favorable"
            }
          }
        ]
      },
      
      "controlButtons": {
        "name": "Control Buttons",
        "type": "component",
        "description": "Main control buttons for application functions",
        "properties": {
          "width": "100%",
          "height": "80px",
          "background": "semantic.color.background.primary",
          "border": "semantic.border.primary",
          "padding": "semantic.spacing.md"
        },
        "elements": [
          {
            "type": "button",
            "content": "Load GPX Route",
            "style": "primary",
            "icon": "upload",
            "position": { "x": 20, "y": 20 }
          },
          {
            "type": "button",
            "content": "Export Data",
            "style": "secondary", 
            "icon": "download",
            "position": { "x": 200, "y": 20 }
          },
          {
            "type": "button",
            "content": "Clear Route",
            "style": "secondary",
            "icon": "trash",
            "position": { "x": 380, "y": 20 }
          },
          {
            "type": "button",
            "content": "Help",
            "style": "secondary",
            "icon": "help",
            "position": { "x": "right-100", "y": 20 }
          }
        ]
      }
    },
    
    "screens": {
      "desktop": {
        "name": "Desktop Layout",
        "type": "screen",
        "description": "Main desktop interface layout",
        "properties": {
          "width": "1920px",
          "height": "1080px",
          "background": "semantic.color.background.primary"
        },
        "layout": {
          "type": "grid",
          "columns": 3,
          "rows": 3,
          "gap": "semantic.spacing.lg"
        },
        "components": [
          {
            "name": "header",
            "position": { "row": 1, "column": "1-3" }
          },
          {
            "name": "flightDataPanel", 
            "position": { "row": 2, "column": 1 }
          },
          {
            "name": "mapPanel",
            "position": { "row": 2, "column": 2 }
          },
          {
            "name": "routePanel",
            "position": { "row": 2, "column": 3 }
          },
          {
            "name": "weatherPanel",
            "position": { "row": 3, "column": 1 }
          },
          {
            "name": "controlButtons",
            "position": { "row": 3, "column": "2-3" }
          }
        ]
      },
      
      "mobile": {
        "name": "Mobile Layout", 
        "type": "screen",
        "description": "Mobile responsive interface layout",
        "properties": {
          "width": "375px",
          "height": "812px",
          "background": "semantic.color.background.primary"
        },
        "layout": {
          "type": "stack",
          "direction": "vertical",
          "gap": "semantic.spacing.md"
        },
        "components": [
          {
            "name": "header",
            "height": "60px"
          },
          {
            "name": "flightDataPanel",
            "height": "300px"
          },
          {
            "name": "mapPanel", 
            "height": "250px"
          },
          {
            "name": "routePanel",
            "height": "200px"
          },
          {
            "name": "weatherPanel",
            "height": "150px"
          },
          {
            "name": "controlButtons",
            "height": "60px"
          }
        ]
      },
      
      "loading": {
        "name": "Loading State",
        "type": "screen",
        "description": "Loading state with spinner and progress",
        "properties": {
          "width": "1920px",
          "height": "1080px",
          "background": "semantic.color.background.primary"
        },
        "elements": [
          {
            "type": "spinner",
            "size": "large",
            "color": "semantic.color.accent.primary",
            "position": { "x": "center", "y": "center" }
          },
          {
            "type": "text",
            "content": "Loading Flight Data...",
            "font": "semantic.typography.body.large",
            "color": "semantic.color.text.primary",
            "position": { "x": "center", "y": "center+60" }
          },
          {
            "type": "progressBar",
            "width": "300px",
            "progress": "75%",
            "position": { "x": "center", "y": "center+100" }
          }
        ]
      },
      
      "error": {
        "name": "Error State",
        "type": "screen", 
        "description": "Error state with error message and retry button",
        "properties": {
          "width": "1920px",
          "height": "1080px",
          "background": "semantic.color.background.primary"
        },
        "elements": [
          {
            "type": "icon",
            "name": "error",
            "size": "large",
            "color": "semantic.color.status.error",
            "position": { "x": "center", "y": "center-60" }
          },
          {
            "type": "text",
            "content": "Error Loading Data",
            "font": "semantic.typography.heading.medium",
            "color": "semantic.color.text.primary",
            "position": { "x": "center", "y": "center" }
          },
          {
            "type": "text",
            "content": "Unable to load flight data. Please check your connection and try again.",
            "font": "semantic.typography.body.medium",
            "color": "semantic.color.text.secondary",
            "position": { "x": "center", "y": "center+40" }
          },
          {
            "type": "button",
            "content": "Retry",
            "style": "primary",
            "position": { "x": "center", "y": "center+100" }
          }
        ]
      }
    }
  }
}
